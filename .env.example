# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Firebase Configuration (choose one method)
# Method 1: Service Account JSON file (recommended for development)
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-service-account.json

# Method 2: Project ID only (for GCP environments)
# FIREBASE_PROJECT_ID=your-project-id

# OpenAI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=3600
